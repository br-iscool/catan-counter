{
	"manifest_version": 3,
	"name": "Catan Card Counter",
	"version": "1.0.0",
	"description": "Count resources in colonist.io",
	"permissions": ["scripting", "activeTab"],
	"action": {
		"default_popup": "src/index.html"
	},
	"background": {
		"service_worker": "src/background/service.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"] ,
			"js": ["src/content/overlay.js"],
			"css": ["src/content/selection.css"]
		}
	]
}
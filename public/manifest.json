{
	"manifest_version": 3,
	"name": "Colonist Card Counter",
	"version": "1.0.0",
	"description": "Count resources in colonist.io",
	"permissions": ["scripting", "activeTab"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "scripts/utils/service.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/overlay.js", "scripts/utils/ocr.js"],
			"css": ["overlay.css"]
		}
	]
}